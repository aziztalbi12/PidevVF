{% extends 'admin/home/home.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}
<style>

.product-show {
    font-family: Arial, sans-serif;
    color: #333;
}

.product-show h1 {
    color: #333;
}

.product-show .table {
    width: 100%;
    margin-top: 20px;
    border-collapse: collapse;
}

.product-show .table th, .product-show .table td {
    padding: 10px;
    border: 1px solid #ddd;
    text-align: left;
}

.product-show .table th {
    background-color: #4CAF50;
    color: white;
}

.product-show a {
    text-decoration: none;
    color: #007bff;
    padding: 5px 10px;
    background-color: #f4f4f4;
    border: 1px solid #ddd;
    border-radius: 3px;
    display: inline-block;
    margin-top: 20px;
}

.product-show a:hover {
    background-color: #ddd;
}

.product-show .btn {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-top: 10px;
}

.product-show .btn:hover {
    background-color: #0056b3;
    border-color: #004085;
}

</style>
<div class="product-show">
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_indexFront') }}">back to list</a>
   

    
</div>
{% endblock %}
